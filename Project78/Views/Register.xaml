<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project78.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="30"
             VerticalOptions="Start">
            <Label Text="Email"
            HorizontalOptions="Center"/>
            <Entry Text="{Binding Path=User.Email, Mode=TwoWay}"
          x:Name="EntryEmail" Keyboard="Email"/>
            <Label Text="FirstName"
                   HorizontalOptions="Center"/>
            <Entry Text="{Binding Path=User.FirstName, Mode=TwoWay}"
                   x:Name="EntryFirstName"/>
            <Label Text="LastName"
                   HorizontalOptions="Center"/>
            <Entry Text="{Binding Path=User.LastName, Mode=TwoWay}"
                   x:Name="EntryLastName"/>
            <Label Text="Password"
          HorizontalOptions="Center"/>
            <Entry Text="{Binding Path=User.Password, Mode=TwoWay}"
                x:Name="EntryFPassword"
                IsPassword="True"/>   
            <Label Text="Password"
                HorizontalOptions="Center"/>
            <Entry Text="{Binding SecondPassword, Mode=TwoWay}"
                x:Name="EntrySPassword"
                IsPassword="True"/>
            <Button Text="Create Account"
                Command="{Binding CreateAccountCommand}" 
                TextColor="White"
                BackgroundColor="#22A7F0"
                x:Name="ButtonRegister"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>