<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project78.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome Log in!" />
            <Label Text="Username"/>
            <Entry Text="{Binding Path=Username}" x:Name="usernameEntry"/>

            <Label Text="Password"/>
            <Entry Text="{Binding Path=Password}" x:Name="passwordEntry"/>
          
            <!--<Button Text="Login" Clicked="OnLoginClicked"/>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>